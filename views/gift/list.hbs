<h2>Lista prezentów</h2>

<ul>
    {{#each giftList}}
        <li>
            {{this.name}} ({{this.count}} szt.)
        </li>
    {{/each}}
</ul>

<h2>Dodaj prezent do listy</h2>
<form action="/gift" method="post">
    <label for="">
        Nazwa
        <input name="name" type="text">
    </label>
    <label for="">
        Ilość [szt.]
        <input name="count" type="number">
    </label>
    <button>Zapisz</button>
</form>